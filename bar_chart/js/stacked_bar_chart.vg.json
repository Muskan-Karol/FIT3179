{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "title": "Victimes of police shooting (2020)",
    "width": 800,
    "height": 400,
    "data": {
      "url": "https://raw.githubusercontent.com/Muskan-Karol/FIT3179/main/bar_chart/data/fatal-police-shootings-data.csv"
      },
    "transform": [
      {
        "filter":{
          "field": "race", 
          "oneOf":["W", "O", "B", "H", "N", "A"]
          }
      },
      {
        "filter":{
          "field": "date", 
          "timeUnit":"date", 
          "range":["31/12/2019", "01/01/2021"]}
      },
      {
        "aggregate": [{"op": "count", "as": "num_victims"}],
        "groupby": ["race"]
      },
      {
        "window": [{
          "op": "sum", 
          "field": "num_victims", 
          "as": "TotalVictims"}],
          "frame": [null, null]
      },
      {
      "calculate": "datum.num_victims/datum.TotalVictims * 100",
      "as": "PercentOfTotal"
      },
      {
        "lookup": "race",
        "from" :{
          "data":{
            "url" : "https://raw.githubusercontent.com/Muskan-Karol/FIT3179/main/bar_chart/data/pop_data_2021_long.csv"
            },
          "key":"Race",
          "fields":["Value", "State"]
        }   
      }
    ],  
    "mark": { "type": "bar" },
    "encoding": {
      "x": {"field": "race", "type": "nominal"},
      "y": {"field": "PercentOfTotal","type": "quantitative"}
    }  
  }