{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 800,
    "height": 450,
  "title": "fatal shooting in the US by a police officer in the line of duty in 2021 every 100,000",
  "projection": {"type": "albersUsa"},
  "data":{
    "url": "https://raw.githubusercontent.com/Muskan-Karol/FIT3179/main/map/js/ne_110m_admin_1_states_provinces.topojson", 
    "format": {"type": "topojson", "feature": "ne_110m_admin_1_states_provinces"}, 
    "name": "topoJson"       
  },
  "transform": [
    {
      "lookup": "properties.postal",
      "from":{
        "data":{
          "url": "https://raw.githubusercontent.com/Muskan-Karol/FIT3179/main/map/data/victimsByRace.csv"
        },
        "key": "state",
        "fields": ["state", "TotalVictimsInState", "Value"]
      }
    },
    {"calculate": "datum.TotalVictimsInState/datum.Value * 100000", "as": "cases"}
  ],
  "mark":{"type": "geoshape"},
  "encoding": {
    "color":{
      "field": "cases",
      "type": "quantitative"
    },
    "tooltip":[
      {"field":"state", "type": "nominal"}
    ]
  }
}