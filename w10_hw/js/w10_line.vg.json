{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 800,
  "height": 450,
  "title": "Victims of fatal police shooting, by race, in the US from 2016-2021, for every 100,000",
  "data":{
    "url": "https://raw.githubusercontent.com/Muskan-Karol/FIT3179/main/w10_hw/data/victims_16_21_all.csv", 
    "name": "csv"       
  },
  "selection": {
    "race_highlight": {
    "type": "multi",
    "fields": ["race"],
    "bind": "legend"
    } 
  },
  "transform": [
    {
      "filter":{"field": "x", "range":[0, 10]}
    },
    {
      "aggregate": [{"op": "mean", "as": "med_val", "field": "x"}],
      "groupby": ["year", "race"]
    }
  ],
  "mark": {"type": "line", "point":true},
  "encoding": {
    "x": {"field": "year", "type": "ordinal", "axis": {"labelAngle": 0}},
    "y": {"field": "med_val", "type": "quantitative", "title": "Victims per 100,000"},
    "color": {
      "field": "race", 
      "type": "nominal",
      "scale": {"scheme": "dark2"}
  },
  "opacity": {
    "condition": {"selection": "race_highlight", "value": 0.6},
    "value": 0.2}
  }
}