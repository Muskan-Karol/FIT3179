{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 800,
  "height": 500,
  "title": "fatal shooting in the US by a police officer every 100,000",
  "data":{
    "url": "https://raw.githubusercontent.com/Muskan-Karol/FIT3179/main/w10_hw/data/StatsByRace.csv",
    "name": "csv"       
  },
  "params": [
    {
      "name": "race_select",
      "bind":{
        "input": "select",
        "options": ["A", "B", "H", "N", "O", "W"],
        "labels": ["A", "B", "H", "N", "O", "W"],
        "name": "Select Race: "
      }
    }
  ],
  "transform": [
    {
      "filter":{
        "field": "Issue", 
        "oneOf":["unarmed_per", "body_camera_false_per", "signs_of_mental_illness_true_per"]}
    },
    {
      "filter":"datum.race == race_select"
    }
  ],
  "mark":{"type": "bar"},
  "encoding": {
    "x":{"field": "Issue", "type": "nominal", "axis": {"labelAngle": 0}},
    "y":{"field": "Value", "type": "quantitative"}
  }
}