{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 800,
  "height": 450,
  "config": {
    "view": {"stroke": null},
    "background": "#fcf2e9"
  },
  "title": "fatal shooting in the US by a police officer in the line of duty in 2022 every 100,000",
  "projection": {"type": "albersUsa"},
  "data":{
    "url": "https://raw.githubusercontent.com/Muskan-Karol/FIT3179/main/Assignment2/map/js/ne_110m_admin_1_states_provinces.topojson", 
    "format": {"type": "topojson", "feature": "ne_110m_admin_1_states_provinces"}, 
    "name": "topoJson"       
  },
  "transform": [
    {
      "lookup": "properties.postal",
      "from":{
        "data":{
          "url": "https://raw.githubusercontent.com/Muskan-Karol/FIT3179/main/Assignment2/map/data/victimsByRace.csv"
        },
        "key": "state",
        "fields": ["race", "state", "VictimsPer100000"]
      }
    }
  ],
  "mark":{"type": "geoshape"},
  "encoding": {
    "color":{
      "field": "race",
      "type": "nominal",
      "scale": {
        "domain": ["W", "B", "N", "A", "H", "O"], 
        "range": ["#8B3A1C", "#db724b", "#58907e", "#83242B", "#123228", "#34AF88"]
        }
    },
    "tooltip":[
      {"field": "race"},
      {"field": "VictimsPer100000"}
    ]
  }
}